---
import MainLayout from "../layouts/MainLayout.astro";
import Forecast from "../components/charts/Forecast.astro";
---

<MainLayout title="WeatherReport">
	<div class="title">
		<h1 id="Title">Error: JS script not loaded</h1> <!-- Replaced via javascript for testing purposes -->
		<h2>Weather report for your location</h2>
		<p>Today, on your location based by ip</p>
	</div>
	<div class="dashboards">
		<div class="forecast">
			<Forecast />
		</div>
	</div>
</MainLayout>

<style>
	.title {
		margin: var(--margin-global);
	}

	.dashboards {
		width: 100%;
		height: 100%;
	}
</style>